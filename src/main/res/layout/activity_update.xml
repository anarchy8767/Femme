<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:elevation="15dp"
    tools:context=".update">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="690dp">


        <EditText
            android:id="@+id/business_name_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Business Name"
            android:textColor="@android:color/black"
            android:textSize="20sp">

        </EditText>

        <EditText
            android:id="@+id/contact_name_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/business_name_update">

        </EditText>

        <EditText
            android:id="@+id/address_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/contact_name_update">

        </EditText>

        <EditText
            android:id="@+id/phone1_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone 1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/address_update">

        </EditText>

        <EditText
            android:id="@+id/phone2_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone 2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/phone1_update">

        </EditText>

        <EditText
            android:id="@+id/email_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/phone2_update">

        </EditText>

        <EditText
            android:id="@+id/description_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView_update">

        </EditText>

        <TextView
            android:id="@+id/textView_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Description"
            android:textColor="@android:color/black"
            android:textSize="22dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/email_update"/>


        <Button
            android:id="@+id/update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_update"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:text="Update"
            android:textAllCaps="false"
            ></Button>

    </RelativeLayout>

</androidx.cardview.widget.CardView>