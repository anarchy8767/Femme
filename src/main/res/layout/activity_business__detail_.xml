<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    tools:context=".Business_Detail_Activity"
    app:cardElevation="15dp">



    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="690dp">


        <TextView
            android:id="@+id/business_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:text="Business Name"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            android:textStyle="bold">

        </TextView>

        <TextView
        android:id="@+id/contact_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/business_name_details">

    </TextView>

    <TextView
        android:id="@+id/address_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/contact_name_details">

    </TextView>

    <TextView
        android:id="@+id/phone_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/address_details">

    </TextView>

    <TextView
        android:id="@+id/email_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/phone_details">

    </TextView>

    <TextView
        android:id="@+id/description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView_details">

    </TextView>

        <TextView
            android:id="@+id/textView_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business Description"
            android:textColor="@android:color/black"
            android:textSize="22dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/email_details"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>